<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_shadow_with_white_background">

            <LinearLayout
                android:id="@+id/linear_layout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:src="@drawable/machine"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mini rice mill machine"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fontsize_16"
                            android:layout_toLeftOf="@+id/iv_favourite"
                            android:layout_marginEnd="@dimen/margin_3"
                            android:layout_alignParentStart="true"/>

                        <ImageView
                            android:id="@+id/iv_favourite"
                            android:layout_width="@dimen/margin_20"
                            android:layout_height="@dimen/margin_20"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_favourite_inactive"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shop_name" />

                        <TextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fontsize_normal"
                            android:text="ABC Enterprise"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/tv_cost"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location_black" />

                        <TextView
                            android:id="@+id/tv_counntry"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fontsize_normal"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/tv_cost"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location_black" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_10"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fontsize_normal"
                            android:text="Pune"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="â‚¹ 2000"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/fontsize_16"
                           />

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTabBackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:id="@+id/Linear_layout_enquiry"
                    android:layout_width="0dp"
                    android:layout_weight="0.27"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="19dp"
                        android:src="@drawable/ic_edit_icon_yellow"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_enquiry"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/fontsize_normal"
                        android:layout_marginStart="@dimen/margin_8"
                        android:duplicateParentState="true"
                        android:textStyle=""/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:gravity="center">


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTabBackground"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Linear_layout_view"
                    android:layout_width="0dp"
                    android:layout_weight="0.27"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="19dp"
                        android:src="@drawable/ic_view_yellow"
                        android:duplicateParentState="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_view"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/fontsize_normal"
                        android:layout_marginStart="@dimen/margin_8"
                        android:duplicateParentState="true"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_very_dark_blue_color_with_corner"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10">

        <LinearLayout
            android:id="@+id/linear_layout_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_one"
            android:orientation="horizontal"
            android:padding="@dimen/margin_15">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TradeGenie Free Subscription"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize_16"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_2"
                    android:background="#7ADDD4D4"
                    android:layout_marginTop="@dimen/margin_8"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_14"
                    android:text="Benefits"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textStyle="bold"/>-->


                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontsize_small"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/margin_8"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_details"
                        android:textColor="@color/colorSubscription"
                        android:textSize="@dimen/fontsize_14"
                        android:layout_marginTop="@dimen/margin_5"/>


                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 1500"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fontsize_18"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>



                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:background="@drawable/bg_circle_one"
                    android:padding="@dimen/margin_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_circle_white"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOTPText"
                            android:textSize="@dimen/fontsize_16"
                            android:text="@string/free"
                            android:textStyle="bold"/>

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOTPText"
                            android:textSize="@dimen/margin_10"
                            android:text="1 Month"
                            />-->

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize_16"
            android:text="@string/lbl_buy_now"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/margin_10"/>

    </LinearLayout>

</RelativeLayout>

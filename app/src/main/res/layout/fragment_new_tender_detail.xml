<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyTenderDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_tender_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tender Name"
                        android:textColor="@color/colorOTPText"
                        android:textSize="@dimen/fontsize_18" />

                    <TextView
                        android:id="@+id/txt_tender_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tender ID - "
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/fontsize_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tender_date"
                        android:textColor="@color/colorTextHint"
                        android:textSize="@dimen/fontsize_12" />

                    <TextView
                        android:id="@+id/txt_created_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextHint"
                        android:textSize="@dimen/fontsize_12" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_description"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/description"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_normal" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/fontsize_normal" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/tender_link"
                android:textColor="@color/colorText"
                android:textSize="@dimen/fontsize_normal" />

            <TextView
                android:id="@+id/txt_tender_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/fontsize_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_normal" />

                <TextView
                    android:id="@+id/txt_tender_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/fontsize_normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/bg_shadow_with_white_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20">


                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/colorTextHint" />-->
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:text="@string/contact_details_will_show_after_buy_tender"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/fontsize_12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="right"
                            android:paddingEnd="@dimen/margin_30"
                            android:text="@string/tender_amount"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/fontsize_16" />

                        <TextView
                            android:id="@+id/tv_tender_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/fontsize_16" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Lnr_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutTaxRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/colorTextHint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="right"
                            android:paddingEnd="@dimen/margin_30"
                            android:text="@string/lbl_total"
                            android:textColor="@color/colorOTPText"
                            android:textSize="@dimen/fontsize_16" />

                        <TextView
                            android:id="@+id/txt_grand_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/colorGreen"
                            android:textSize="@dimen/fontsize_16" />

                    </LinearLayout>


                </LinearLayout>


<!--                <LinearLayout-->
<!--                    android:id="@+id/linear_layout_pay_now"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="@dimen/margin_15"-->
<!--                    android:layout_marginBottom="@dimen/margin_15"-->
<!--                    android:background="@drawable/bg_button_with_corner_and_green_bg">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:paddingStart="@dimen/margin_30"-->
<!--                        android:paddingTop="@dimen/margin_5"-->
<!--                        android:paddingEnd="@dimen/margin_30"-->
<!--                        android:paddingBottom="@dimen/margin_5"-->
<!--                        android:text="Pay Now"-->
<!--                        android:textColor="@color/colorWhite" />-->

<!--                </LinearLayout>-->

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_payment_type"
                android:layout_marginTop="@dimen/margin_20"
                android:textColor="@color/colorText"
                android:textSize="@dimen/fontsize_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shadow_with_white_background"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_cash"
                            android:text="@string/lbl_cash"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/radio_online"
                            android:text="@string/lbl_online"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/radio_subscription"
                            android:text="@string/lbl_subscription"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/linear_layout_pay_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/radio_group"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/bg_button_with_corner_and_green_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/margin_30"
                            android:paddingTop="@dimen/margin_5"
                            android:paddingEnd="@dimen/margin_30"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="@string/lbl_pay_now"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </RelativeLayout>

                <!--                <LinearLayout-->
                <!--                    -->
                <!--                    android:layout_marginBottom="@dimen/margin_15"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content">-->
                <!--                    <TextView-->
                <!--                        android:text="Payment type: "-->
                <!--                        android:textSize="12sp"-->
                <!--                        android:textColor="@color/colorText"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"/>-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/lbl_payment_type"-->
                <!--                        android:textSize="12sp"-->
                <!--                        android:textColor="@color/colorText"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"/>-->
                <!--                </LinearLayout>-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/ProgressBarPostEnqList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_80"
            android:layout_centerInParent="true"
            android:src="@drawable/loader" />

    </RelativeLayout>

</RelativeLayout>
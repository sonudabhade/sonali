<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_with_white_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_10"
        android:paddingTop="@dimen/margin_6"
        android:paddingEnd="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:text="@string/lbl_tender_id"
                android:textColor="@color/colorOTPText"
                android:textSize="@dimen/fontsize_16" />

            <TextView
                android:id="@+id/tv_tender_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:text="587086"
                android:textColor="@color/colorOTPText"
                android:textSize="@dimen/fontsize_16" />


        </LinearLayout>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_3"
                android:textColor="@color/colorText"
                android:textSize="@dimen/fontsize_12" /></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/lbl_tender_name"
                android:textColor="@color/colorText"
                android:textSize="@dimen/fontsize_14" />

            <TextView
                android:id="@+id/tv_tender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_3"
                android:text="hj"
                android:textColor="@color/colorText"
                android:textSize="@dimen/fontsize_12"
                android:textStyle="bold" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_date">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:text="@string/lbl_cost"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_14" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:text="50"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_14" />
            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5">

            <LinearLayout
                android:id="@+id/linear_layout_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_very_dark_blue_color_with_corner"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_15"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_5">

                <TextView
                    android:id="@+id/txt_button_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="View Details"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize_12" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

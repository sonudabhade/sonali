                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:text="*"
                    android:textColor="@color/red" />
            </LinearLayout>


            <RelativeLayout

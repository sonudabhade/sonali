<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_background_with_corner">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_15">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trade Genie 90 Days"
                android:textStyle="bold"
                android:textSize="@dimen/margin_20"
                android:textColor="@color/text_color"/>

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/ColorGrey"
            android:layout_marginTop="@dimen/margin_10"/>


        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost - â‚¹2000"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days - 30"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_5"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/ColorGrey"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_leads_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Leads - 30"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Images - 30"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_5"/>


        <TextView
            android:id="@+id/tv_title_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_services"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_5"/>

        <TextView
            android:id="@+id/tv_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/fontsize_small"
            android:layout_marginTop="@dimen/margin_5"
            android:text="One,TWO"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="@dimen/fontsize_normal"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/fontsize_small"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged."/>

    </LinearLayout>

</RelativeLayout>

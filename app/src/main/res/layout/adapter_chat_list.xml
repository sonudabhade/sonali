<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@drawable/bg_only_shadow_with_white_background"
            android:padding="@dimen/margin_15">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_image_view"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user_profile"
                app:civ_border_color="@color/colorTextHint"
                app:civ_border_width="@dimen/margin_2"
                android:duplicateParentState="true"/>

            <LinearLayout
                android:id="@+id/linerLayout_teacherInfo_Adapter_TeacherList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@+id/iv_profile_image_view"
                android:gravity="center"
                android:orientation="vertical"
                android:duplicateParentState="true">

                <TextView
                    android:id="@+id/tv_buyer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_16"
                    android:duplicateParentState="true"/>


                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/fontsize_12"
                    android:layout_marginTop="@dimen/margin_3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    android:duplicateParentState="true"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:text="10:30 AM"
                    android:textSize="@dimen/fontsize_14"
                    android:textColor="@color/colorText"
                    android:duplicateParentState="true"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
